<p style="text-align: center">Longest Word Game</p>
<ul style="list-style-type:none; display:flex">
  <% @letters.each do |letter| %>
    <li style="border: 35px solid PowderBlue; background-color: PowderBlue; margin: 20px; color: white; font-size: 28px;padding: 0px;"><%=letter%></li>
  <% end %>
</ul>

<form style="text-align:center; display: flex; flex-direction: column;" action="/score" method="POST" data-turbo="false">
  <label for="attempt">Your Word...</label>
  <input style="margin:0px 400px; text-align: center;" name="attempt" type="text">
  <input id="letters" name="letters" type="hidden" value="<%=@letters.join%>"/>
  <input style="margin:0px 550px;" type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
